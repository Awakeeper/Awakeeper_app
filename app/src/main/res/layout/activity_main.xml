<?xml version="1.0" encoding="utf-8"?>
<com.ssomai.android.scalablelayout.ScalableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/main_textview"
    android:layout_gravity="center"
    android:background="@android:color/darker_gray"
    android:keepScreenOn="true"
    sl:scale_base_height="768"
    sl:scale_base_width="1280">

    <TextView
        android:id="@+id/gpsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:text="GPS: 0, 0"
        android:textColor="@android:color/white"
        sl:scale_height="70"
        sl:scale_left="0"
        sl:scale_textsize="30"
        sl:scale_top="50"
        sl:scale_width="300" />

    <TextView
        android:id="@+id/velocityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:text="속도: "
        android:textColor="@android:color/white"
        sl:scale_height="70"
        sl:scale_left="0"
        sl:scale_textsize="30"
        sl:scale_top="120"
        sl:scale_width="300" />

    <TextView
        android:id="@+id/angleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:text="핸들 각도: "
        android:textColor="@android:color/white"
        sl:scale_height="70"
        sl:scale_left="0"
        sl:scale_textsize="30"
        sl:scale_top="190"
        sl:scale_width="300" />

    <TextView
        android:id="@+id/rpmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:text="RPM: "
        android:textColor="@android:color/white"
        sl:scale_height="70"
        sl:scale_left="0"
        sl:scale_textsize="30"
        sl:scale_top="260"
        sl:scale_width="300" />

    <TextView
        android:id="@+id/heartbeatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:text="심박수: "
        android:textColor="@android:color/white"
        sl:scale_height="70"
        sl:scale_left="990"
        sl:scale_textsize="30"
        sl:scale_top="50"
        sl:scale_width="330" />

    <TextView
        android:id="@+id/coText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:text="CO농도: "
        android:textColor="@android:color/white"
        sl:scale_height="70"
        sl:scale_left="990"
        sl:scale_textsize="30"
        sl:scale_top="120"
        sl:scale_width="330" />

    <TextView
        android:id="@+id/windowOffsetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:text="창문열림: "
        android:textColor="@android:color/white"
        sl:scale_height="70"
        sl:scale_left="990"
        sl:scale_textsize="30"
        sl:scale_top="190"
        sl:scale_width="330" />

    <TextView
        android:id="@+id/irisText"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:text="홍채: "
        android:textColor="@android:color/white"
        sl:scale_height="70"
        sl:scale_left="990"
        sl:scale_textsize="30"
        sl:scale_top="120"
        sl:scale_width="330" />

    <TextView
        android:id="@+id/timeText"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:text="시간: "
        android:textColor="@android:color/white"
        sl:scale_height="70"
        sl:scale_left="990"
        sl:scale_textsize="30"
        sl:scale_top="190"
        sl:scale_width="330" />

    <TextView
        android:id="@+id/stateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:gravity="center"
        android:text="@string/idle_text"
        android:textColor="@android:color/white"
        sl:scale_height="130"
        sl:scale_left="360"
        sl:scale_textsize="50"
        sl:scale_top="300"
        sl:scale_width="500" />

    <Button
        android:id="@+id/prefButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        sl:scale_height="130"
        sl:scale_left="950"
        sl:scale_textsize="50"
        sl:scale_top="570"
        sl:scale_width="300" />

    <Button
        android:id="@+id/startScenarioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주행시작"
        sl:scale_height="130"
        sl:scale_left="450"
        sl:scale_textsize="50"
        sl:scale_top="570"
        sl:scale_width="300" />

    <ImageView
        android:id="@+id/coffeeImg"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/starbucks"
        sl:scale_height="374"
        sl:scale_left="410"
        sl:scale_top="250"
        sl:scale_width="405" />

    <TextView
        android:id="@+id/coffeeText"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:gravity="center"
        android:text="@string/coffee_text"
        android:textColor="@android:color/white"
        sl:scale_height="130"
        sl:scale_left="360"
        sl:scale_textsize="40"
        sl:scale_top="60"
        sl:scale_width="500" />
</com.ssomai.android.scalablelayout.ScalableLayout>